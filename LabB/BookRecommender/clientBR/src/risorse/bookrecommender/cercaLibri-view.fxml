<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="bookrecommender.libri.CercaLibriController"
           fx:id="rootPane"
           stylesheets="@styles.css"
           prefHeight="600.0" prefWidth="900.0">

    <fx:define>
        <ToggleGroup fx:id="searchModeGroup"/>
    </fx:define>

    <children>
        <VBox alignment="CENTER" spacing="20" styleClass="form-container">
            <padding>
                <Insets top="40" right="60" bottom="40" left="60"/>
            </padding>

            <Label text="Ricerca Libri" styleClass="form-title"/>

            <HBox spacing="10" alignment="CENTER" styleClass="search-mode-toggle">
                <ToggleButton fx:id="tbByTitle" text="Titolo" toggleGroup="$searchModeGroup" selected="true" styleClass="toggle-button-style"/>
                <ToggleButton fx:id="tbByAuthor" text="Autore" toggleGroup="$searchModeGroup" styleClass="toggle-button-style"/>
                <ToggleButton fx:id="tbByAuthorYear" text="Autore + Anno" toggleGroup="$searchModeGroup" styleClass="toggle-button-style"/>
                <ToggleButton fx:id="tbById" text="ID" toggleGroup="$searchModeGroup" styleClass="toggle-button-style"/>
            </HBox>

            <Separator prefWidth="400"/>

            <StackPane fx:id="inputContainer" alignment="TOP_CENTER">

                <VBox fx:id="titleBox" spacing="10" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Label text="Titolo del libro" styleClass="suggestion-label"/>
                    <TextField fx:id="titleField" promptText="Inserisci titolo (anche parziale)" styleClass="search-field" HBox.hgrow="ALWAYS"/>
                </VBox>

                <VBox fx:id="authorBox" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false" HBox.hgrow="ALWAYS">
                    <Label text="Nome dell'autore" styleClass="suggestion-label"/>
                    <TextField fx:id="authorField" promptText="Inserisci nome o cognome" styleClass="search-field" HBox.hgrow="ALWAYS"/>
                </VBox>

                <GridPane fx:id="authorYearBox" hgap="10" vgap="10" visible="false" managed="false">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="70"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                    <children>
                        <Label text="Nome autore" styleClass="suggestion-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="authorYearAuthorField" promptText="Nome o cognome" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label text="Anno" styleClass="suggestion-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <TextField fx:id="authorYearField" promptText="YYYY" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>

                <VBox fx:id="idBox" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false" HBox.hgrow="ALWAYS">
                    <Label text="ID del libro" styleClass="suggestion-label"/>
                    <TextField fx:id="idField" promptText="Inserisci l'ID esatto" styleClass="input-field" HBox.hgrow="ALWAYS"/>
                </VBox>
            </StackPane>

            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="backButton" text="Indietro" onAction="#onBack" styleClass="text-button"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="messageLabel" text="" styleClass="suggestion-label"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="clearButton" text="Pulisci" onAction="#onClear" styleClass="text-button"/>
                <Button fx:id="searchButton" text="Cerca Libro" onAction="#onSearch" styleClass="primary-button" minWidth="180">
                    <graphic>
                        <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                 fill="black"/>
                    </graphic>
                </Button>
            </HBox>

            <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colTitle" text="Titolo" prefWidth="320"/>
                    <TableColumn fx:id="colAuthor" text="Autore" prefWidth="200"/>
                    <TableColumn fx:id="colYear" text="Anno" prefWidth="100"/>
                </columns>
                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Nessun risultato da mostrare" style="-fx-font-size: 16px; -fx-text-fill: #aab4c8;"/>
                        <Label text="Effettua una ricerca per visualizzare i libri." style="-fx-font-size: 12px; -fx-text-fill: #7d889b;"/>
                    </VBox>
                </placeholder>
            </TableView>

        </VBox>
    </children>
</StackPane>